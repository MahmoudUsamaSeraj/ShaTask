@model ShaTask.Models.InvoiceHeader

@{
    ViewData["Title"] = "Delete Invoice";
}
<div class="card shadow text-center">
    <div class="card-body">
<h1 class="text-dark">Delete Invoice</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer Name</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Invoicedate.ToShortDateString()</dd>

        <dt class="col-sm-2">Cashier</dt>
        <dd class="col-sm-10">@Model.Cashier?.CashierName</dd>

        <dt class="col-sm-2">Branch</dt>
        <dd class="col-sm-10">@Model.Branch?.BranchName</dd>
    </dl>
</div>

<h4>Items</h4>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Item Count</th>
                <th>Item Price</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.InvoiceDetails)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.ItemCount</td>
                    <td>@item.ItemPrice</td>
                    <td>@(item.ItemCount * item.ItemPrice)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
    </div>
</div>
<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

        .table thead th {
            background-color: #f8f9fa;
            color: #212529;
            font-weight: bold;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table td, .table th {
            padding: 12px 15px;
            border: 1px solid #dee2e6;
        }

    .btn-secondary, .btn-primary, .btn-danger {
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #495057;
        }

        .btn-danger:hover {
            background-color: #C70039;
        }

        .btn-primary:hover {
            background-color: #293462;
        }

    .shadow {
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .table-responsive {
        overflow-x: auto;
    }

    .form-check-input[type="checkbox"] {
        width: 40px;
        height: 20px;
        margin: 0;
        cursor: pointer;
    }

        .form-check-input[type="checkbox"]:checked + .form-check-label::before {
            background-color: #007bff;
        }

        .form-check-input[type="checkbox"]:checked + .form-check-label::after {
            left: 20px;
        }

    tbody tr {
        height: 70px;
    }

    .input-group {
        width: 100%;
    }

    .form-control.search-input {
        border-radius: 5px 0 0 5px;
        height: 38px;
    }

    .btn.btn-primary.search-button {
        border-radius: 0 5px 5px 0;
        height: 38px;
    }

    h6 a:hover {
        color: #ffc400 !important;
    }
</style>
