@model ShaTask.Models.InvoiceHeader

@{
    ViewData["Title"] = "Invoice Details";
}

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

        .table thead th {
            background-color: #f8f9fa;
            color: #212529;
            font-weight: bold;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table td, .table th {
            padding: 12px 15px;
            border: 1px solid #dee2e6;
        }

    .btn-secondary, .btn-primary, .btn-danger {
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #495057;
        }

        .btn-danger:hover {
            background-color: #C70039;
        }

        .btn-primary:hover {
            background-color: #293462;
        }

    .shadow {
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>

<div class="card shadow text-center">
    <div class="card-body">
        <h1 class="text-dark">Invoice Details</h1>

        <div>
            <h4>Invoice</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Customer Name
                </dt>
                <dd class="col-sm-10">
                    @Model.CustomerName
                </dd>
                <dt class="col-sm-2">
                    Date
                </dt>
                <dd class="col-sm-10">
                    @Model.Invoicedate.ToShortDateString()
                </dd>
                <dt class="col-sm-2">
                    Cashier
                </dt>
                <dd class="col-sm-10">
                    @Model.Cashier?.CashierName
                </dd>
                <dt class="col-sm-2">
                    Branch
                </dt>
                <dd class="col-sm-10">
                    @Model.Branch?.BranchName
                </dd>
            </dl>
        </div>

        <h4>Items</h4>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Item Count</th>
                        <th>Item Price</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.InvoiceDetails)
                    {
                        <tr>
                            <td>@item.ItemName</td>
                            <td>@item.ItemCount</td>
                            <td>@item.ItemPrice</td>
                            <td>@(item.ItemCount * item.ItemPrice)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <p>
            <a asp-action="Edit" class="btn btn-primary ms-2" asp-route-id="@Model.ID">Edit</a>
            <a class="btn btn-secondary ms-2" asp-action="Index">Back to List</a>
        </p>
    </div>
</div>
