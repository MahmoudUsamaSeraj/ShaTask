@model ShaTask.Models.Cashier

@{
    ViewData["Title"] = "Delete Cashier";
}

<div class="card shadow text-center">
    <div class="card-body">
        <h1 class="text-dark">Delete Cashier</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Cashier</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Cashier Name</dt>
                <dd class="col-sm-10">@Model.CashierName</dd>

                <dt class="col-sm-2">Branch Name</dt>
                <dd class="col-sm-10">@Model.Branch?.BranchName</dd>
            </dl>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ID" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
    }

        .table thead th {
            background-color: #f8f9fa;
            color: #212529;
            font-weight: bold;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table td, .table th {
            padding: 12px 15px;
            border: 1px solid #dee2e6;
        }

    .btn-secondary, .btn-primary, .btn-danger {
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #495057;
        }

        .btn-danger:hover {
            background-color: #C70039;
        }

        .btn-primary:hover {
            background-color: #293462;
        }

    .shadow {
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>
